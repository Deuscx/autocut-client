{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "paths": {
      "~~/*": [
        "./src/main/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["package.json", "src/main", "test", "auto-imports.d.ts"]
}
